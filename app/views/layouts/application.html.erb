<!DOCTYPE html>
<html>
  <head>
    <title>ZZZ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
        <%= link_to "Bookers", root_path, class: 'font-weight-bold text-light' %>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#drop">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="drop">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li>
                <%= link_to "投稿一覧画面", post_images_path %>
              </li>
              <li>
                <%= link_to "投稿フォーム", new_post_image_path %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
              </li>
              <li>
                <%= link_to "マイページ", user_path(current_user) %>
              </li>
            <% else %>
            <li>
              <%= link_to "新規登録", new_user_registration_path %>
            </li>
            <li>
              <%= link_to "ログイン", new_user_session_path %>
            </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>

    </footer>
  </body>
</html>
